{
  "name": "vivid-vscode",
  "displayName": "Vivid Creative Coding",
  "description": "VS Code support for Vivid creative coding framework - WGSL syntax highlighting and runtime auto-download",
  "version": "0.2.0",
  "publisher": "seethroughlab",
  "repository": {
    "type": "git",
    "url": "https://github.com/seethroughlab/vivid-vscode"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vivid.checkForUpdates",
        "title": "Vivid: Check for Updates"
      },
      {
        "command": "vivid.reinstallRuntime",
        "title": "Vivid: Reinstall Runtime"
      },
      {
        "command": "vivid.downloadRuntime",
        "title": "Vivid: Download Runtime"
      },
      {
        "command": "vivid.showOutput",
        "title": "Vivid: Show Output"
      }
    ],
    "configuration": {
      "title": "Vivid",
      "properties": {
        "vivid.vividRoot": {
          "type": "string",
          "default": "",
          "description": "Path to vivid source root directory (for development builds). Leave empty to use auto-downloaded runtime."
        },
        "vivid.checkUpdatesOnStart": {
          "type": "boolean",
          "default": true,
          "description": "Check for runtime updates when VS Code starts"
        }
      }
    },
    "languages": [
      {
        "id": "wgsl",
        "extensions": [
          ".wgsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.50.0",
    "typescript": "^5.3.0"
  }
}
