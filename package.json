{
  "name": "vivid",
  "displayName": "Vivid",
  "description": "VS Code support for Vivid creative coding framework",
  "version": "0.1.0",
  "publisher": "seethroughlab",
  "repository": {
    "type": "git",
    "url": "https://github.com/seethroughlab/vivid"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Visualization", "Other"],
  "activationEvents": [
    "workspaceContains:**/chain.cpp",
    "onLanguage:cpp",
    "onView:vividOperators"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vivid",
          "title": "Vivid",
          "icon": "$(symbol-misc)"
        }
      ]
    },
    "views": {
      "vivid": [
        {
          "id": "vividOperators",
          "name": "Operators",
          "contextualTitle": "Vivid Operators"
        },
        {
          "id": "vividInspector",
          "name": "Inspector",
          "type": "webview",
          "contextualTitle": "Node Inspector"
        },
        {
          "id": "vividPerformance",
          "name": "Performance",
          "type": "webview",
          "contextualTitle": "Vivid Performance"
        }
      ]
    },
    "commands": [
      {
        "command": "vivid.startRuntime",
        "title": "Vivid: Start Runtime"
      },
      {
        "command": "vivid.stopRuntime",
        "title": "Vivid: Stop Runtime"
      },
      {
        "command": "vivid.reload",
        "title": "Vivid: Force Reload"
      },
      {
        "command": "vivid.toggleInlineDecorations",
        "title": "Vivid: Toggle Inline Decorations"
      },
      {
        "command": "vivid.goToOperator",
        "title": "Vivid: Go to Operator"
      },
      {
        "command": "vivid.refreshOperators",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vivid.editParam",
        "title": "Vivid: Edit Parameter",
        "icon": "$(edit)"
      },
      {
        "command": "vivid.soloOperator",
        "title": "Vivid: Solo Operator",
        "icon": "$(eye)"
      },
      {
        "command": "vivid.exitSolo",
        "title": "Vivid: Exit Solo Mode",
        "icon": "$(eye-closed)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vivid.refreshOperators",
          "when": "view == vividOperators",
          "group": "navigation"
        },
        {
          "command": "vivid.exitSolo",
          "when": "view == vividOperators",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vivid.editParam",
          "when": "view == vividOperators && viewItem == param",
          "group": "inline"
        },
        {
          "command": "vivid.soloOperator",
          "when": "view == vividOperators && viewItem == operator",
          "group": "1_solo"
        },
        {
          "command": "vivid.exitSolo",
          "when": "view == vividOperators && viewItem == operator-soloed",
          "group": "1_solo"
        }
      ]
    },
    "configuration": {
      "title": "Vivid",
      "properties": {
        "vivid.runtimePath": {
          "type": "string",
          "default": "",
          "description": "Path to vivid executable"
        },
        "vivid.websocketPort": {
          "type": "number",
          "default": 9876,
          "description": "WebSocket port for runtime communication"
        },
        "vivid.showInlineDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline preview decorations in editor"
        },
        "vivid.previewSize": {
          "type": "number",
          "default": 48,
          "description": "Size of inline preview thumbnails in pixels"
        },
        "vivid.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to runtime when opening a Vivid project"
        }
      }
    },
    "languages": [
      {
        "id": "wgsl",
        "extensions": [".wgsl"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.50.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ws": "^8.14.2"
  }
}
